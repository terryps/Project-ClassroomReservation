<Window x:Class="ClassroomReservation.Main.PasswordForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassroomReservation"
        mc:Ignorable="d"
        Title="비밀번호 입력" Height="270" Width="480"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="NoResize">
    <Border Padding="40 40 40 20">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 40 0 0">
                <TextBlock Name="Password" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Text="비밀번호 :" Margin="0,0,20,0"/>
                <PasswordBox Name="passwordBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="30" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Padding="5"/>
            </StackPanel>
            <Button Name="LoginButton" Height="30" Width="100"  Margin="0,60,0,0" Content="확인" Background="{StaticResource MainColor}" Foreground="White"/>
        </StackPanel>
    </Border>
</Window>
