<Window x:Class="ClassroomReservation.Admin.ClasstimeAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassroomReservation.Admin"
        mc:Ignorable="d"
        Title="강의 시간표 관리" SizeToContent="Height" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border Padding="20">
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="inputBox" Grid.Column="0" Margin="0 0 8 0"/>
                <Button Name="modifyButton" Grid.Column="1" Content="수정"/>
            </Grid>
            <ListBox Name="listBox" Margin="0 10 0 0"/>
            <StackPanel Margin="0 10 0 0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="deleteButton" Content="ERROR" Margin="0 0 10 0"/>
                <Button Name="addButton" Content="ERROR"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
